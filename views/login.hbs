<script src="/js/jquery.min.js"></script>
<script>
console.log("in script");
(function(d, s, id){
   var js, fjs = d.getElementsByTagName(s)[0];
   if (d.getElementById(id)) {return;}
   js = d.createElement(s); js.id = id;
   js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.9&appId=167922013750290";
   fjs.parentNode.insertBefore(js, fjs);
 }(document, 'script', 'facebook-jssdk'));
  window.fbAsyncInit = function() {
    FB.init({
      appId            : '167922013750290',
      autoLogAppEvents : true,
      status           : true,
      xfbml            : true,
      version          : 'v2.9' // or v2.8, v2.7, v2.6, v2.5, v2.4, v2.3,
    });
    FB.login(function(response) {
      const facebookID = response.authResponse.userID;
      let username = "";
      if (response.authResponse) {
       console.log('Welcome!  Fetching your information.... ');
       console.log(response);
       FB.api('/me', function(response) {
         username = response.name;
         console.log('Good to see you, ' + response.name + '.');
       });
       FB.api('/'+facebookID+'/friendlists',function(response) {
         $.ajax({
           url:'/friendList',
           method:'post',
           data:{
             response:"get info",
             username:username,
             facebookId:facebookID
           },
           success: function(res) {
             alert(res.err)
             window.top.location = "http://localhost:3000/friendList"; //redirect to friendlist page
           },
           error: function(res) {
             alert("error")
           }
         })
         console.log(response)
       })
      } else {
       alert('User cancelled login or did not fully authorize.');
       window.top.location = "http://localhost:3000" //redirect to mainpage
      }
    },{scope:'email,user_friends,public_profile'});
  };
  console.log("in ready");
</script>
